        .calculator {
            border: 2px solid #ccc;
            padding: 20px;
            border-radius: 10px;
            background-color: #333;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.3);
        }

        #display {
            width: 100%;
            height: 50px;
            font-size: 2em;
            text-align: right;
            margin-bottom: 10px;
            border: none;
            padding: 10px;
            background-color: #444;
            color: #fff;
            border-radius: 5px;
        }

        .buttons {
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            gap: 10px;
        }

        .btn {
            padding: 20px;
            font-size: 1.5em;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            background-color: #888;
            color: #fff;
