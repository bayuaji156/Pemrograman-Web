        /* Judul */
        h1 {
            font-size: 24px;
            color: #333;
        }

        /* Grup Input */
        .input-group {
            display: flex;
            margin-top: 20px;
        }

        .input-group input {
            flex: 1;
            padding: 10px;
            font-size: 16px;
            border: 1px solid #ccc;
            border-radius: 5px 0 0 5px;
        }

        .input-group button {
            padding: 10px;
            font-size: 16px;
            border: none;
            background-color: #74ebd5;
            color: #fff;
            border-radius: 0 5px 5px 0;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        .input-group button:hover {
            background-color: #57bfb6;
        }

        /* Daftar Tugas */
        #taskList {
            list-style-type: none;
            padding: 0;
            margin-top: 20px;
        }

        #taskList li {
            display: flex;
            justify-content: space-between;
            align-items: center;
